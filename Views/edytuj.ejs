<!DOCTYPE html>
<html>

<head>
    <%include head.ejs%>
        <title>Dodaj test</title>
</head>

<body>
    <%include navbar.ejs%>
        <div class="container body-content" >
            <div class="ibox">
                <div class="row">
                    <form class="form form-horizontal" id="nowy_test" method="POST" action="/zapisz">
                        <br>
                        <div class="form-group">
                      <label class="control-label col-md-3">Nazwa testu:</label>  
                      <div class="col-md-4"> 
                        <input class="form-control" type="text" name="nazwa" value="">
                    </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Czas rozwiązywania testu:</label> 
                        <div class="col-md-4">
                        <input class="form-control" type="number" name="czas" value="" min="0" step="1"/>
                    </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Czy losować pytania:</label> 
                        <div class="col-md-4">
                        <input class="" type="checkbox" name="losowo" value="losowo" />
                    </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Ile pytań wylosować studentowi: </label>
                        <div class="col-md-4">
                        <input class="form-control" type="number" name="ilosc_pytan" value="1"  min="1" step="1"/>
                    </div>
                        </div>
                        <br>
                        <input class="btn btn-default" type="submit" value="Dodaj Pytania">
                    </form>
                </div>
            </div>
        </div>
        <%include scripts.ejs%>
</body>

</html>